<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Wz.Controls.Wpf">
    <Style TargetType="{x:Type local:BezierEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BezierEditor}">
                    <Border Background="White" 
                            BorderBrush="LightGray" 
                            BorderThickness="1">
                        <!-- Canvas needs a background (even Transparent) to be hit-test visible -->
                        <Canvas x:Name="PART_Canvas" Background="Transparent" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
